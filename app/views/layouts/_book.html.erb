<h2 class="mt-3">New book</h2>
<%= render 'layouts/error', obj:book %>
<%= form_with model: book, html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, placeholder: "Title here", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body, rows: 4, placeholder: "Opinion here", class: "form-control" %>
  </div>

<!--Star-->

  <% if book.id.nil? %>
    <div class="form-group" id="star">
      <%= f.label :star %>
      <%= f.hidden_field :star, id: "review_star", class: "form-control" %>
      <div id="post_raty"></div>
    </div>
    <script>
      $(document).on('turbolinks:load', function() {
        let elem = document.querySelector('#post_raty');
        if (elem == null) return;

        elem.innerHTML = ""
        let opt = {
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'book[star]',
        };
        raty(elem, opt);
      });
    </script>
  <% else %>
    <div class="form-group">
      <%= render 'layouts/static_rate', book:book %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :category, "Category" %>
    <%= f.text_field :category, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-outline-success" %>
  </div>
<% end %>