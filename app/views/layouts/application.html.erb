<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/e48857b0b3.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= bootstrap_class_for_flash(key) %>">
        <%= message %>
      </div>
    <% end %>
    <% if user_signed_in? %>
      <div class="d-flex mt-3">
        <%= render 'searches/search' %>
        <%= render 'tagsearches/tagsearch' %>
      </div>
    <% end %>
    <%= yield %>
    <!-- ローディングアニメーション -->
    <div id="load-bg">
      <div id="load">
        <div>G</div>
        <div>N</div>
        <div>I</div>
        <div>D</div>
        <div>A</div>
        <div>O</div>
        <div>L</div>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
