<% books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(book.user) do %>
        <%= image_tag book.user.get_profile_image(80,80) %>
      <% end %>
    </td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>
    <td>
      <% if book.category.present? %>
        <%= link_to book.category, tagsearches_search_path(content: book.category) %>
      <% end %>
    </td>
    <td><i class="fa-regular fa-comment"></i> <%= book.book_comments.count %></td>
    <td id="favorite_buttons_<%= book.id %>">
      <%= render 'favorites/fav', book:book %>
    </td>
    <td><i class="fa-brands fa-watchman-monitoring"></i> <%= book.read_counts.count %></td>
    <td><%= render "layouts/static.rate", book: book %></td>
  </tr>
<% end %>