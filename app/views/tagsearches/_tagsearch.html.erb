<% if user_signed_in? %>
  <div class="search_form mt-3">
    <%= form_with url: tagsearches_search_path, method: :get, class: "form-inline" do |f| %>
      <div class="form-group mr-2">
        <%= f.text_field :content, class: "form-control form-control-sm", placeholder: "Tag..." %>
      </div>
      <div class="form-group mr-3">
        <%= f.submit "Search", class: "btn btn-outline-secondary btn-sm" %>
      </div>
    <% end %>
  </div>
<% end %>