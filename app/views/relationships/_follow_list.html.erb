<% if users.exists? %>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(50,50) %></td>
          <td><%= user.name %></td>
          <td>Fllowing: <%= user.followings.count %></td>
          <td>Followers: <%= user.followers.count %></td>
          <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no one</p>
<% end %>