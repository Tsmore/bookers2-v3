<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "Following", user_relationships_path(user.id), remote: true, method: :delete, class: "text-decoration-none" %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(user.id), remote: true, method: :post, class: "text-decoration-none" %>
  <% end %>
<% end %>