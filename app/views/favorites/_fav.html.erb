<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true, class: "d-inline-flex align-items-center text-decoration-none" do %>
    <i class="fa-solid fa-heart"></i>&nbsp;<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true, class: "d-inline-flex align-items-center text-decoration-none" do %>
    <i class="fa-regular fa-heart"></i>&nbsp;<%= book.favorites.count %>
  <% end %>
<% end %>