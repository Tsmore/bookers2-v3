<div class="container-fluid">
  <div class="row mt-3 mx-5">
    <div class="col-md-3">
      <%= render 'layouts/info', user: current_user %>
      <%= render 'videos/video', video: @videonew %>
    </div>
    <div class="col-md-8 offset-1">
      <h2>Title: <%= @video.title %></h2>
      <p>Description: <%= @video.body %></p>
      <p>Category: <%= @video.category %></p>

      <% if @video.clip.attached? %>
        <%= video_tag url_for(@video.clip), controls: true, class: "video-size" %>
      <% else %>
        <p>No video available</p>
      <% end %>
      <%= link_to "Delete", video_path(@video), method: :delete, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>