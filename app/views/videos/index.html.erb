            <!--    </div>-->
            <!--  </div>-->
            <!--</th>-->
          </tr>
        </thead>
        <tbody>
          <% @videos.each do |video| %>
            <tr>
              <td>
                <%= link_to video_path(video) do %>
                  <% if video.clip.attached? %>
                    <%= video_tag url_for(video.clip), size: "100x100" %>
                  <% else %>
                    <span>No video available</span>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to video.title, video_path(video) %></td>
              <td><%= video.body %></td>
              <td><%= video.category %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
