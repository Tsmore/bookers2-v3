      <h2>Clips</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Video</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th colspan="6"></th>
