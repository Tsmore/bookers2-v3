<h2 class="mt-3">New Video</h2>
<%= render 'layouts/error', obj:video %>
<%= form_with model: video, html: {class: 'form-horizontal'}, local: false do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title", class: "control-label"%>
    <%= f.text_field :title, placeholder: "Title...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body, "Description", class: "control-label" %>
    <%= f.text_area :body, rows: 4, placeholder: "Description...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category, "Category" %>
    <%= f.text_field :category, placeholder: "Category...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :clip, "Video", class: "control-label" %>
    <div class="cuntom-file">
      <%= f.file_field :clip %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Upload", class: "btn btn-outline-success" %>
  </div>
<% end %>
