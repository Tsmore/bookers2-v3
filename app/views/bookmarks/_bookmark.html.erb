<% if current_user != book.user %>
  <% if book.find_bookmark(current_user).blank? %>
    <%= link_to book_bookmarks_path(book), method: :post, remote: true do %>
      <i class="fa-regular fa-bookmark"></i>
    <% end %>
  <% else %>
    <%= link_to book_bookmark_path(book, book.find_bookmark(current_user)), method: :delete, remote: true do %>
      <i class="fa-solid fa-bookmark"></i>
    <% end %>
  <% end %>
<% end %>