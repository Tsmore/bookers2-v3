<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <%= render 'layouts/info', user:current_user %>
      <%= render 'layouts/book', book:@book %>
    </div>
    <div class="col-md-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th scope="row"><%= image_tag user.get_profile_image(100,100) %></th>
              <td><%= user.name %></td>
              <td>followings: <%= user.followings.count %></td>
              <td>followers: <%= user.followers.count %></td>
              <td>
                <% if current_user != user %>
                  <% if current_user.following?(user) %>
                    <%= link_to "Following", user_relationships_path(user.id), method: :delete %>
                  <% else %>
                    <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>