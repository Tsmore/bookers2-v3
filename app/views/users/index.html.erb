<div class="container-fluid">
  <div class="row mt-3 mx-5">
    <div class="col-md-3">
      <%= render 'layouts/info', user: current_user %>
      <%= render 'layouts/book', book: @book %>
    </div>
    <div class="col-md-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th scope="row"><%= image_tag user.get_profile_image(100,100) %></th>
              <td><%= user.name %></td>
              <td id="following_count_<%= user.id %>">following: <%= user.followings.count %></td>
              <td id="follower_count_<%= user.id %>">followers: <%= user.followers.count %></td>
              <td id="follow_button_<%= user.id %>"><%= render 'relationships/button', user: user %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>