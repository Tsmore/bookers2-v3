<div class="container-fluid">
  <div class="row mt-3 mx-5">
    <div class="col-md-3">
      <%= render 'layouts/info', user: @user, room_id: @room_id %>
      <%= render 'layouts/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user) do %><%= image_tag book.user.get_profile_image(80,80) %><% end %></td>
              <td><%= link_to book.title, book_path(book), class: "text-decoration-none" %></td>
              <td><%= book.body %></td>
              <td><i class="fa-regular fa-comment"></i> <%= book.book_comments.count %></td>
              <td class=<%= "favorite-" + book.id.to_s %> >
                <%= render 'favorites/fav', book:book %>
              </td>
              <td><i class="fa-brands fa-watchman-monitoring"></i> <%= @book.read_counts.count %></td>
              <td><%= render "layouts/static.rate", book: book %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>