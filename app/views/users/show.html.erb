<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <%= render 'layouts/info', user: @user, room_id: @room_id %>
      <%= render 'layouts/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user) do %><%= image_tag book.user.get_profile_image(80,80) %><% end %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
              <td>Comments: <%= book.book_comments.count %></td>
              <td><%= render "layouts/static.rate", book: book %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>